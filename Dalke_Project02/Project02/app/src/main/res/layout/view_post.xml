<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/shadow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/view_post_section"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/post_image_view"
                android:layout_gravity="fill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/app_icon"/>
            <TextView
                android:padding="20dp"
                android:id="@+id/view_post_contents"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Hello World"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_below="@id/view_post_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/view_post_username_button"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/blue"
                android:text="Chrisdalke"/>
            <TextView
                android:id="@+id/view_post_timestamp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginRight="20dp"
                android:text="15 Minutes Ago"/>


        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>