<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/buttonProblem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/problem_1"
            android:onClick="problemOneClicked"/>

        <Button
            android:id="@+id/buttonProblem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/problem_2"
            android:onClick="problemTwoClicked"/>

        <Button
            android:id="@+id/buttonProblem3A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/problem_3a"
            android:onClick="problemThreeAClicked"/>

        <Button
            android:id="@+id/buttonProblem3B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/problem_3b"
            android:onClick="problemThreeBClicked"/>

        <Button
            android:id="@+id/buttonProblem4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/problem_4"
            android:onClick="problemFourClicked"/>

    </LinearLayout>

</RelativeLayout>
