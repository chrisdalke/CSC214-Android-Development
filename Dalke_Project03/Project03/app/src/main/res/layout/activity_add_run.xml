<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_run"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="csc214.project03.Activities.AddRunActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="10dp"
        style="@style/HeaderTextView"
        android:text="Run Options"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_transparent"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/add_run_distance_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="Distance: 0.0 mi"/>

        <ImageButton
            android:id="@+id/add_run_distance_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_edit_light"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_transparent"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/add_run_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="Time: 00:00:00"/>

        <ImageButton
            android:id="@+id/add_run_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_edit_light"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_transparent"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/add_run_pace_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="Pace per Mile: 00:00:00"/>

    </RelativeLayout>

        <TextView
            style="@style/HeaderTextView"
            android:text="Run Information"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_transparent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/run_add_location_button"
                style="@style/ButtonBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Location"/>

            <FrameLayout
                android:id="@+id/run_add_location_frame"
                android:layout_width="match_parent"
                android:layout_height="160dp">
            </FrameLayout>

            <Button
                android:id="@+id/run_add_weather_button"
                style="@style/ButtonBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Weather"/>

            <ImageView
                android:id="@+id/run_add_photo_view"
                android:layout_gravity="fill"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_edit_light"/>
            <Button
                android:id="@+id/run_add_photo_button"
                style="@style/ButtonBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Photo"/>
        </LinearLayout>

        <TextView
        style="@style/HeaderTextView"
        android:text="Progress towards Weekly Goal:"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_transparent"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/add_run_weekly_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="+0 miles to weekly goal."/>
    </RelativeLayout>
    <TextView
        style="@style/HeaderTextView"
        android:text="Progress towards Monthly Goal:"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_transparent"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/add_run_monthly_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="+0 miles to monthly goal."/>
    </RelativeLayout>



    </LinearLayout>

</ScrollView>
