<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_transparent"
        android:padding="10dp"
        android:layout_marginBottom="10dp">


        <ImageView
            android:id="@+id/achievement_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:tint="@color/black"
            android:src="@drawable/ic_achievement"/>

        <TextView
            android:layout_toRightOf="@id/achievement_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:id="@+id/achievement_name"
            android:text="Achievement Name"/>

        <TextView
            android:id="@+id/achievement_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="Locked!"/>

    </RelativeLayout>

</RelativeLayout>
