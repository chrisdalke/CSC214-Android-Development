<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="csc214.project03.Activities.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                style="@style/HeaderTextView"
                android:text="General Settings"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_transparent"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/checkbox_sound_effects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Play congratulatory sound effects"/>
                </LinearLayout>

            <TextView
                style="@style/HeaderTextView"
                android:text="Reset Data"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_transparent"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:orientation="vertical">
            <Button
                style="@style/ButtonBlack"
                android:id="@+id/reset_runs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Runs"/>
            <Button
                style="@style/ButtonBlack"
                android:id="@+id/reset_goals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Goals"/>
            <Button
                style="@style/ButtonBlack"
                android:id="@+id/reset_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset All"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
