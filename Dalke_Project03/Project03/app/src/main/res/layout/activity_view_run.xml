<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_run"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="csc214.project03.Activities.ViewRunActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            style="@style/HeaderTextView"
            android:text="Run Info"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_transparent"
            android:padding="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/view_run_distance_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="Distance: 0.0 mi"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_transparent"
            android:padding="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/view_run_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="Time: 00:00:00"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_transparent"
            android:padding="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/view_run_pace_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="Pace per Mile: 00:00:00"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/view_run_weather_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/HeaderTextView"
                android:text="Weather"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_transparent"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:padding="10dp">
                <TextView
                    android:id="@+id/view_run_weather_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="No Weather Conditions Logged!"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_run_location_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/HeaderTextView"
                android:text="Location"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_transparent"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <FrameLayout
                    android:id="@+id/run_view_location_frame"
                    android:layout_width="match_parent"
                    android:layout_height="160dp">
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_run_photo_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/HeaderTextView"
                android:text="Attached Photo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_transparent"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/run_add_photo_view"
                    android:layout_gravity="fill"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_edit_light"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>